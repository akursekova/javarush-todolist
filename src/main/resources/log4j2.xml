<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="LogToRollingFile" fileName="/Users/alinakursekova/Downloads/javarush-todolist/logs/todolist.log"
                     filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

    </Appenders>
    <Loggers>
        <Logger name="dev.javarush.todolist.servlets.user.UserSignIpServlet" level="trace" additivity="false">
            <AppenderRef ref="LogToRollingFile"/>
        </Logger>
        <Logger name="dev.javarush.todolist.servlets.task.TableTaskServlet" level="trace" additivity="false">
            <AppenderRef ref="LogToRollingFile"/>
        </Logger>
        <Logger name="dev.javarush.todolist.services.impl.TaskServiceImpl" level="trace" additivity="false">
            <AppenderRef ref="LogToRollingFile"/>
        </Logger>
        <Logger name="dev.javarush.todolist.servlets.task.NewTaskServlet" level="trace" additivity="false">
            <AppenderRef ref="LogToRollingFile"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
</Configuration>
